<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_extended_cost_analysis_count" model="ir.ui.view">
        <field name="name">product.template.cost.analysis.count.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position='inside'>
                <button class="oe_stat_button" type="object" name="view_cost_analysis_stock_products" icon="fa-calculator">
                    <field string="Cost Analysis" name="cost_analysis_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>


</odoo> 