<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_form_extended_cost_analysis_count" model="ir.ui.view">
        <field name="name">purchase.order.cost.analysis.count.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position='inside'>
                <button class="oe_stat_button" type="object" name="view_cost_analysis_puchase_order_products" icon="fa-calculator">
                    <field string="Cost Analysis" name="cost_analysis_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>


</odoo> 